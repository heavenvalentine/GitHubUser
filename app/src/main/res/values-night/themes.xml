<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GitHubUser" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/whitegreyblue</item>
        <item name="colorOnPrimary">@color/verydark</item>
        <item name="colorAccent">@color/whitegreyblue</item>
    </style>

    <style name="FontColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="NameTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextAppearance">@android:color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
</resources>